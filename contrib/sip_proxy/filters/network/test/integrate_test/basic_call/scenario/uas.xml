<?xml version="1.0" encoding="ISO-8859-1"?>
<!DOCTYPE scenario SYSTEM "sipp">

<!--                                                                    -->
<!--                 Sipp default 'uas' scenario.                       -->
<!--                                                                    -->
<scenario name="called party UE">
  <!-- By adding rrs="true" (Record Route Sets), the route sets         -->
  <!-- are saved and used for following messages sent. Useful to test   -->
  <!-- against stateful SIP proxies/B2BUAs.                             -->

  <recv request="INVITE"  rtd="true" rrs="true" crlf="true">
  </recv>

  <!-- The '[last_*]' keyword is replaced automatically by the          -->
  <!-- specified header if it was present in the last message received  -->
  <!-- (except if it was a retransmission). If the header was not       -->
  <!-- present or if no message has been received, the '[last_*]'       -->
  <!-- keyword is discarded, and all bytes until the end of the line    -->
  <!-- are also discarded.                                              -->
  <!--                                                                  -->
  <!-- If the specified header was present several times in the         -->
  <!-- message, all occurences are concatenated (CRLF seperated)        -->
  <!-- to be used in place of the '[last_*]' keyword.                   -->

  <send>
    <![CDATA[
      SIP/2.0 100 Trying
      [last_Via:]
      [last_From:]
      [last_To:]
      [last_Call-ID:]
      [last_CSeq:]
      [last_Record-Route]  
      Content-Length:[len]
    ]]>
  </send>

  <!--pause milliseconds="25000"/-->

  <send>
    <![CDATA[
      SIP/2.0 180 Ringing
      [last_Via:]
      [last_Record-Route:]
      [last_From:]
      [last_To:];tag=563aedc1-563c162bfdc2d1c-Nit-lucentNGFS-00012[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      Content-Length: [len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0 8
      a=rtpmap:0 PCMU/8000
      a=rtpmap:8 PCMU/8000
    ]]>
  </send>

  <!--pause milliseconds="20000"/-->

  <send retrans="1000">
    <![CDATA[
      SIP/2.0 200 OK
      [last_Via:]
      [last_From:]
      [last_To:];tag=563aedc1-563c162bfdc2d1c-Nit-lucentNGFS-00012[call_number]
      [last_Call-ID:]
      [last_CSeq:]
      [routes]
      Record-Route: <sip:[field4]:[field2];role=anch;lr;transport=tcp;x-suri=sip:scscf-internal.cncs.svc.cluster.local:15090;xkey=001>
      Contact: <sip:[local_ip]:[local_port];transport=[transport];x-suri=sip:scscf-internal.cncs.svc.cluster.local:15090>
      Call-Info:563aedc1-563c162bfdc2d1c-Nit-lucentNGFS-00012[call_number]
      Allow: ACK, BYE, CANCEL, INFO, INVITE, NOTIFY, OPTIONS, PRACK, REFER
      Content-Type: application/sdp
      Content-Length:[len]

      v=0
      o=user1 53655765 2353687637 IN IP[local_ip_type] [local_ip]
      s=
      c=IN IP[media_ip_type] [media_ip]
      t=0 0
      m=audio [media_port] RTP/AVP 0 8
      a=rtpmap:0 PCMU/8000
      a=rtpmap:8 PCMU/8000
    ]]>
  </send>

  <recv request="ACK" rrs="true">
  </recv>

  <recv request="BYE">
  </recv>

  <send>
    <![CDATA[
     SIP/2.0 200 OK
     [last_Via:]
     [last_From:]
     [last_To:]
     [last_Call-ID:]
     [last_CSeq:]
     Server: Alcatel-Lucent-HPSS/3.0.3
     Content-Length: 0
    ]]>
  </send>


  <!-- Keep the call open for a while in case the 200 is lost to be     -->
  <!-- able to retransmit it if we receive the BYE again.               -->
  <!--pause milliseconds="4000"/-->


  <!-- definition of the response time repartition table (unit is ms)   -->
  <ResponseTimeRepartition value="500, 1000, 1500, 2000, 2500, 3000, 3500, 4000"/>

  <!-- definition of the call length repartition table (unit is ms)     -->
  <CallLengthRepartition value="10, 50, 100, 500, 1000, 5000, 10000"/>

</scenario>
